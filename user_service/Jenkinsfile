pipeline { 
    agent any 
    environment { 
        APP_IMAGE = "philipasd/user_service"
        dockerImage = ""
    }
    stages { 

        stage('Checkout') { 
            steps { 
                checkout scm 
            }
        }

        stage('Compile Code') {
            steps {
                sh 'cd user_service && ./mvnw clean compile'
            }
        } 

        
        
        // stage('Static Code Analysis') {
