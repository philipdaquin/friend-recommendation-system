        // stage('Unit Test') {
        //     steps {
        //         sh 'cd user_service && ./mvnw test'
        //     }
        // } 
        
        
        // stage('Integration Test') { 
        //     steps { 
        //         // sh 'cd user_service && ./mvnw clean test -Pintegration-testing'
        //         // echo 'integration testing'
        //          sh 'cd user_service && ./mvnw test'
